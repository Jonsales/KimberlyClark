<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_style_default"
    android:contentInsetLeft="0dp"
    android:contentInsetStart="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    android:contentInsetRight="0dp"
    android:contentInsetEnd="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetEnd="0dp"
    app:theme="@style/AppTheme"
    app:popupTheme="@style/Widget.AppCompat.Light.ActionBar"
    tools:ignore="UnusedAttribute"
    android:padding="0dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="left">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center_horizontal">
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7">
            <TextView
                android:id="@+id/editTextSearchToolbar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:layout_gravity="right"
                android:gravity="center_vertical|right"
                android:text="@string/app_name"
                android:textSize="20dp"
                android:textAlignment="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/editSearch"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"></EditText>
            <ImageView
                android:id="@+id/imagePesquisarToolbar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_search"
                android:layout_weight="0.2"/>
            <ImageView
                android:id="@+id/imageMenuToolbar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_search"
                android:layout_weight="0.2"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.Toolbar>