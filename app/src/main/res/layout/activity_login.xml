<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context="br.com.john.kimberlyclark.LoginActivity">
    <LinearLayout
        android:id="@+id/linear_login"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:background="@drawable/img_background_login">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical"
                    android:background="@drawable/border_corner"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logo_login_"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"></LinearLayout>
                    <EditText
                        android:id="@+id/edit_login"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16dp"
                        android:textColor="@color/color_style_default"
                        android:hint="@string/login"
                        android:textColorHint="@color/color_style_default"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:background="@drawable/background_edit"
                        />
                    <EditText
                        android:id="@+id/edit_password"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:textSize="16dp"
                        android:textColor="@color/color_style_default"
                        android:hint="@string/senha"
                        android:textColorHint="@color/color_style_default"
                        android:password="true"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:background="@drawable/background_edit"
                        />
                    <Button
                        android:id="@+id/btn_entrar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="center"
                        android:layout_gravity="center"
                        android:text="@string/entrar"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:textSize="16dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:background="@drawable/background_button_blue"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1">
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>